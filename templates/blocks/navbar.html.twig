{% block navbar %}
    <section id="navbar-top">
        <nav>
            <ul>
                <li>
                    <a href="{{ path('home') }}">
                        <img src="{{ asset('build/images/megaproduction_logo.png') }}" alt="Logo de MegaProduction" />
                    </a>
                </li>
                <li>
                    <a href="{{ path('castings') }}">Castings</a>
                </li>
                <li>
                    {% if not app.user %}
                        <ul class="authentification">
                            <li>
                                <a href="{{ path('register') }}" class="register">Créer un compte</a>
                            </li>
                            <li>
                                <a href="{{ path('login') }}" class="login">Se connecter</a>
                            </li>
                        </ul>
                    {% else %}
                        <ul class="authentification">
                            <li class="profil">
                                   <img src="{{ app.user.photoProfil ? asset('/build/images/profilePictures/' ~ app.user.photoProfil) : asset('/build/images/profilePictures/default.png') }}" class="profilPicture" alt="Photo de profil" />
                                <ul id="list-profil">
                                    <li>
                                        <a href="{{ path('profil') }}" class="profile">Mon profil</a>
                                    <li>
                                        <a href="{{ path('logout') }}" class="logout">Se déconnecter</a>
                                    </li>
                                </ul>
                            </li>

                        </ul>
                    {% endif %}
            </ul>
        </nav>
    </section>
{% endblock navbar %}
